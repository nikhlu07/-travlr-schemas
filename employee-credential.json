{
  "$id": "EJzStfcj5F0NQdI2uqfXmmGMeAhb6qW1MBEkS_OO_XNg",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Employee Identity Credential",
  "description": "Employee identity and authorization credential",
  "type": "object",
  "properties": {
    "v": {
      "description": "Version",
      "type": "string"
    },
    "d": {
      "description": "Digest (SAID)",
      "type": "string"
    },
    "i": {
      "description": "Issuer AID",
      "type": "string"
    },
    "ri": {
      "description": "Registry identifier",
      "type": "string"
    },
    "s": {
      "description": "Schema SAID",
      "type": "string"
    },
    "a": {
      "description": "Attribute section",
      "type": "object",
      "properties": {
        "i": {
          "description": "Recipient AID",
          "type": "string"
        },
        "dt": {
          "description": "Issuance date time",
          "type": "string",
          "format": "date-time"
        },
        "employeeId": {
          "type": "string",
          "description": "Employee identifier"
        },
        "fullName": {
          "type": "string",
          "description": "Full name"
        },
        "department": {
          "type": "string",
          "description": "Department"
        },
        "position": {
          "type": "string",
          "description": "Job position"
        },
        "employmentStatus": {
          "type": "string",
          "enum": [
            "active",
            "inactive",
            "terminated"
          ],
          "description": "Employment status"
        },
        "startDate": {
          "type": "string",
          "format": "date",
          "description": "Employment start date"
        },
        "authorizations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "Authorization type"
              },
              "level": {
                "type": "string",
                "description": "Authorization level"
              }
            },
            "required": [
              "type",
              "level"
            ],
            "additionalProperties": false
          },
          "description": "Employee authorizations"
        }
      },
      "required": [
        "i",
        "dt",
        "employeeId",
        "fullName",
        "department",
        "employmentStatus"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "v",
    "d",
    "i",
    "ri",
    "s",
    "a"
  ],
  "additionalProperties": false
}